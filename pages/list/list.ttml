<view class='page {{__page_classes}}'><include src='/components/common/common'></include><include src='/components/header/header'></include><view class='body after-navber'><view class='top-bar'><block wx:if='{{false}}'><view><view class='cat-list'><scroll-view scrollX='true'><view class='list-content'><view bindtap='allClick' class='cat-item'><text class='flex-y-center'>全部</text></view><block wx:for='{{cat_list}}' wx:for-item='item' wx:for-index='index' wx:key='{{item.id}}'><view bindtap='catClick' class='cat-item {{(item.checked?"active":"")}}' data-index='{{index}}'><text class='flex-y-center'>{{item.name}}</text></view></block></view></scroll-view></view><block wx:for='{{cat_list}}' wx:for-item='item' wx:for-index='parentIndex' wx:key='{{item.id}}'><block wx:if='{{ (item.checked && item.list.length > 0) }}'><view class='sub-cat-list'><scroll-view scrollX='true'><view class='list-content'><block wx:for='{{item.list}}' wx:for-item='item' wx:for-index='index' wx:key='{{item.id}}'><view bindtap='subCatClick' class='cat-item {{(item.checked?"active":"")}}' data-index='{{index}}' data-parent-index='{{parentIndex}}'><text class='flex-y-center'>{{item.name}}</text></view></block></view></scroll-view></view></block></block></view></block><view class='flex-row sort-bar'><view bindtap='sortClick' class='flex-grow-1 flex-x-center flex-y-center sort-item {{(sort == 0?"active":"")}}' data-sort='0'>综合                </view><view bindtap='sortClick' class='flex-grow-1 flex-x-center flex-y-center sort-item {{(sort == 1?"active":"")}}' data-sort='1'>最新                </view><view bindtap='sortClick' class='flex-grow-1 flex-x-center flex-row sort-item {{(sort == 2?"active":"")}}' data-default_sort_type='0' data-sort='2'><view class='flex-y-center'>价格</view><view class='flex-y-center sort-icon-box'><view><view><block wx:if='{{ (sort == 2 && sort_type == 0) }}'><image class='sort-icon-up' src='{{__wxapp_img.sort.up_active.url}}'></image></block><block wx:else><image class='sort-icon-up' src='{{__wxapp_img.sort.up.url}}'></image></block></view><view><block wx:if='{{ (sort == 2 && sort_type == 1) }}'><image class='sort-icon-up' src='{{__wxapp_img.sort.down_active.url}}'></image></block><block wx:else><image class='sort-icon-up' src='{{__wxapp_img.sort.down.url}}'></image></block></view></view></view></view><view bindtap='sortClick' class='flex-grow-1 flex-x-center flex-y-center sort-item {{(sort == 3?"active":"")}}' data-sort='3'>销量                </view></view></view><view class='goods-list'><block wx:if='{{show_no_data_tip}}'><view class='no-data-tip'>该类目暂无内容</view></block><block wx:for='{{goods_list}}' wx:for-item='item' wx:for-index='index' wx:key='{{item.id}}'><navigator class='goods-item' openType='navigate' url='/pages/goods/goods?id={{item.id}}'><image class='goods-pic' mode='aspectFill' src='{{item.pic_url}}'></image><view class='goods-info' style='padding:5rpx 20rpx;'><text class='mb-10 text-more-2' style='height:2.8em;line-height:1.4;'>{{item.name}}</text><view class='flex-row'><view class='flex-grow-1' style='color:#ff334b'>￥{{item.price}}</view><block wx:if='{{__is_sales}}'><view class='flex-grow-0 fs-sm' style='color:#999;'>已售{{item.sales}}</view></block></view></view></navigator></block></view><view class='loading-bar {{(show_loading_bar?"active":"")}}' style='text-align: center'><image src='{{__wxapp_img.system.loading.url}}' style='width: 160rpx;height: 80rpx'></image></view></view><include src='/components/footer/footer'></include></view>